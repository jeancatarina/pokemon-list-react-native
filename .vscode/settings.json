{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/node_modules": false,
		"**/*.code-search": true
	},
	"editor.codeActionsOnSave": {
		"quickfix.biome": true,
		"source.organizeImports.biome": true,
		"source.fixAll": "always"
	},
	"editor.defaultFormatter": "biomejs.biome"
}
